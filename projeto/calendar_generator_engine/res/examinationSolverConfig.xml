<?xml version="1.0" encoding="UTF-8"?>
<solver>
  <!--<environmentMode>FAST_ASSERT</environmentMode>-->
  <solutionClass>examination.domain.Examination</solutionClass>
  <entityClass>examination.domain.RoomPeriod</entityClass>

  <scoreDirectorFactory>
    <scoreDefinitionType>HARD_SOFT</scoreDefinitionType>
    <scoreDrl>examinationScoreRules.drl</scoreDrl>
    <initializingScoreTrend>ONLY_DOWN</initializingScoreTrend>
  </scoreDirectorFactory>

  <constructionHeuristic>
  </constructionHeuristic>

  <localSearch>
    <unionMoveSelector>
      <swapMoveSelector>
        <fixedProbabilityWeight>0.9</fixedProbabilityWeight>
        <filterClass>examination.domain.solver.SwapMoveFilter</filterClass>
      </swapMoveSelector>
      <moveListFactory>
        <fixedProbabilityWeight>0.1</fixedProbabilityWeight>
        <moveListFactoryClass>examination.domain.solver.ExamMoveFactory</moveListFactoryClass>
      </moveListFactory>
    </unionMoveSelector>
  </localSearch>

  <termination>
    <secondsSpentLimit>200</secondsSpentLimit>
    <bestScoreLimit>-0hard/-0soft</bestScoreLimit>
  </termination>
</solver>
